{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"],
    "paths": {
      "@domain/data-sync": ["libs/domain/data-sync/src/index.ts"],
      "@domain/feature-funds": ["libs/domain/feature-funds/src/index.ts"],
      "@domain/user": ["libs/domain/user/src/index.ts"],
      "@sdk-utils/core": ["libs/sdk-utils/core/src/index.ts"],
      "@sdk-utils/docs": ["libs/sdk-utils/docs/src/index.ts"],
      "@sdk-utils/multicall": ["libs/sdk-utils/multicall/src/index.ts"],
      "@sdk-utils/multichain": ["libs/sdk-utils/multichain/src/index.ts"],
      "@sdk-utils/state-listener": [
        "libs/sdk-utils/state-listener/src/index.ts"
      ],
      "@shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@shared/ui-library": ["libs/shared/ui-library/src/index.ts"],
      "@shared/util-blockchain": ["libs/shared/util-blockchain/src/index.ts"],
      "@shared/util-blockchain/abis": ["libs/shared/util-blockchain/abis"],
      "@shared/util-types": ["libs/shared/util-types/src/index.ts"],
      "@auxo/components/*": ["apps/auxo/components/*"],
      "@auxo/public/*": ["apps/auxo/public/*"],
      "@auxo/hooks/*": ["apps/auxo/hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": ["node_modules", "jest.config.ts"]
}
