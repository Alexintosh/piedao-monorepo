#!/bin/bash

print_usage() {
    echo "ðŸ’€ $1"
    echo "Help below ðŸ‘‡"
    echo ""
    echo "Shows the Heroku logs for the given remote"
    echo ""
    echo "Usage: ./heroku-log <remote>"
